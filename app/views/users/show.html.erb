<%= render partial: "shared/header" %>
<%= render @user %>
<% if @user.bio.present? %>
	<div class="bio-section">
	  <h2 class="bio-title">Bio</h2>
	  <p><%= @user.bio %></p>
  </div>
  <%= render partial: "posts/post", collection: @posts %>
<% end %>
<a href=<%= @user.id.to_s+"/posts" %>>
<button class="button is-small">See all post</button>
</a>